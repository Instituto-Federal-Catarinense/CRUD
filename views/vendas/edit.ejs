<h1>Editar venda</h1>

<!-- Formulário para editar uma venda existente -->
<form action="/vendas/<%= venda.id %>?_method=PUT" method="POST">
    <!-- Campo para o ID do Usuário -->
    <div class="form-group">
        <label for="idUser">ID do Usuário</label>
        <input type="number" class="form-control" id="idUser" name="idUser" value="<%= venda.idUser %>" required>
    </div>

    <!-- Campo para o ID do Produto -->
    <div class="form-group">
        <label for="idProduct">ID do Produto</label>
        <input type="number" class="form-control" id="idProduct" name="idProduct" value="<%= venda.idProduct %>" required>
    </div>

    <!-- Campo para a Quantidade -->
    <div class="form-group">
        <label for="quantidade">Quantidade</label>
        <input type="number" class="form-control" id="quantidade" name="quantidade" value="<%= venda.quantidade %>" required>
    </div>

    <!-- Campo para o Valor Total -->
    <div class="form-group">
        <label for="valorTotal">Valor Total</label>
        <input type="number" step="0.01" class="form-control" id="valorTotal" name="valorTotal" value="<%= venda.valorTotal %>" required>
    </div>

    <!-- Campo para a Data da Venda -->
    <div class="form-group">
        <label for="DataVenda">Data da Venda</label>
        <input type="date" class="form-control" id="DataVenda" name="DataVenda" value="<%= venda.DataVenda.toISOString().split('T')[0] %>" required>
    </div>

    <!-- Botão para salvar alterações -->
    <button type="submit" class="btn btn-warning">Salvar</button>
</form>
