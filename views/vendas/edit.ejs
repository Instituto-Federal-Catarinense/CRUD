<h1>Editar venda</h1>

<form action="/venda/<%= venda.id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="quantidade">Quantidade Vendida:</label>
        <input type="text" class="form-control" id="quantidade" name="quantidade" value="<%venda.quantidade %>"" required>
    </div>
    <div class="form-group">
        <label for="valor">valor:</label>
        <input type="text" class="form-control" id="valor" name="valor" value="<%= venda.valor %>" required>
    </div>
    <div class="form-group">
        <label for="data_venda">Data:</label>
        <input type="number" class="form-control" id="data_venda" name="data_venda" value="<%= venda.data_venda %>" required>
    </div>


    <div class="form-group">
        <label for="users_id">users</label>
        <select class="form-control" id="categoria" name="categoria" required>
            <% users.forEach(function(users) { %>
                <option value="<%= users.id %>" <%= venda.users == users.id ? 'selected' : '' %>><%= users.username %></option>
                <option value="<%= users.id %>" <%= venda.users == users.id ? 'selected' : '' %>><%= users.password %></option>
            <% }); %>
        </select>
    </div>


    <div class="form-group">
        <label for="produtos_id">produto</label>
        <select class="form-control" id="produtos" name="produtos" required>
            <% produtos.forEach(function(produtos) { %>
                <option value="<%= produtos.id %>" <%= venda.produtos == produtos.id ? 'selected' : '' %>><%= produtos.nome %></option>
                <option value="<%= produtos.id %>" <%= venda.produtos == produtos.id ? 'selected' : '' %>><%= produtos.descricao %></option>
                <option value="<%= produtos.id %>" <%= venda.produtos == produtos.id ? 'selected' : '' %>><%= produtos.preco %></option>
                <option value="<%= produtos.id %>" <%= venda.produtos == produtos.id ? 'selected' : '' %>><%= produtos.quantidade %></option>
                
            <% }); %>
        </select>
    </div>
    <button type="submit" class="btn btn-warning">Salvar</button>