<h1>Cadastrar nova venda</h1>
<form action="/venda" method="POST">
    <div class="form-group">
        <label for="quantidade">Quantidade Vendida:</label>
        <input type="text" class="form-control" id="quantidade" name="quantidade" required>
    </div>
    <div class="form-group">
        <label for="valor">valor:</label>
        <textarea id="valor" class="form-control" name="valor" required></textarea>
    </div>
    <div class="form-group">
        <label for="data_venda">data da venda:</label>
        <input type="number" class="form-control" id="data_venda" name="data_venda" required>
        <div class="form-group">
            <label for="users">Users:</label>
            <select class="form-control" id="users" name="users" required>
                <% users.forEach(users => { %>
                    <option value="<%= users.id %>"><%= user.username, user.password, user.role %></option>
                <% }) %>
            </select>
        </div>
    
    <div class="form-group">
        <label for="produtos">Produtos:</label>
        <select class="form-control" id="produtos" name="produtos" required>
            <% produtos.forEach(produtos => { %>
                <option value="<%= produtos.id %>"><%= produto.nome, produto.preco, produto.descricao, produto.quantidade, produto.categoria %></option>
            <% }) %>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>
