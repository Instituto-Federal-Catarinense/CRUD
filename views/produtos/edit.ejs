<h1>Editar Produto</h1>
<form action="/produtos/<%= produto.id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="produtoname">Nome do Produto</label>
        <input type="text" class="form-control" id="produtoname" name="produtoname" value="<%= produto.produtoname %>" required>
    </div>
    <div class="form-group">
        <label for="produtoquant">Quantidade</label>
        <input type="number" class="form-control" id="produtoquant" name="produtoquant" value="<%= produto.produtoquant %>" required>
    </div>
    <div class="form-group">
        <label for="produtopreco">Pre√ßo</label>
        <input type="text" class="form-control" id="produtopreco" name="produtopreco" value="<%= produto.produtopreco %>" required>
    </div>
    <button type="submit" class="btn btn-warning">Atualizar</button>
</form>
