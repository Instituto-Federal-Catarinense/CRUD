<h1>Todos os Produtos</h1>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Produto</th>
            <th>Quantidade</th>
            <th>Pre√ßo</th>
        </tr>
    </thead>
    <tbody>
        <% produtos.forEach(produto => { %>
            <tr>
                <td><%= produto.id %></td>
                <td><%= produto.produtoname %></td>
                <td><%= produto.produtoquant %></td>
                <td><%= produto.produtopreco %></td>
                <td>
                    <a href="/produtos/<%= produto.id %>" class="btn btn-primary">View</a>
                    <a href="/produtos/<%= produto.id %>/edit" class="btn btn-warning">Edit</a>
                    <form action="/produtos/<%= produto.id %>?_method=DELETE" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
