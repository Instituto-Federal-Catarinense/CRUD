<h1>Lista de categorias</h1>

<form id="searchForm" method="GET" action="/categorias" style="margin-bottom: 20px;">
    <div class="form-group">
        <label for="search">Buscar Categoria:</label>
        <input type="text" id="search" name="search" class="form-control" value="<%= search %>" placeholder="Digite o nome da categoria" autocomplete="off">
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<p>Search Term: <%= search %></p> <!-- Adicione esta linha para depuração -->

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Categoria</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody id="categoriaTableBody">
        <% categorias.forEach(categoria => { %>
            <tr>
                <td><%= categoria.id %></td>
                <td><%= categoria.nome %></td>
                <td>
                    <a href="/categorias/<%= categoria.id %>" class="btn btn-primary">View</a>
                    <a href="/categorias/<%= categoria.id %>/edit" class="btn btn-warning">Edit</a>
                    <form action="/categorias/<%= categoria.id %>?_method=DELETE" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

<script>
    document.getElementById('search').addEventListener('input', function() {
        const searchValue = this.value;

        fetch(`/categorias/search?search=${encodeURIComponent(searchValue)}`)
            .then(response => response.json())
            .then(data => {
                const tbody = document.getElementById('categoriaTableBody');
                tbody.innerHTML = ''; // Clear existing rows

                data.categorias.forEach(categoria => {
                    const tr = document.createElement('tr');
                    tr.innerHTML = `
                        <td>${categoria.id}</td>
                        <td>${categoria.nome}</td>
                        <td>
                            <a href="/categorias/${categoria.id}" class="btn btn-primary">View</a>
                            <a href="/categorias/${categoria.id}/edit" class="btn btn-warning">Edit</a>
                            <form action="/categorias/${categoria.id}?_method=DELETE" method="POST" style="display: inline;">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    `;
                    tbody.appendChild(tr);
                });
            })
            .catch(error => console.error('Error:', error));
    });
</script>
