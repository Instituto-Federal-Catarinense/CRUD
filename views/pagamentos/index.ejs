<!DOCTYPE html>
<html>
<head>
    <title>Pagamentos</title>
</head>
<body>
    <h1>Pagamentos</h1>
    <a href="/pagamentos/new">Novo Pagamento</a>
    <ul>
        <% pagamentos.forEach(function(pagamento) { %>
            <li>
                <a href="/pagamentos/<%= pagamento.id %>"><%= pagamento.id %></a>
                - <a href="/pagamentos/<%= pagamento.id %>/edit">Editar</a>
                - <form action="/pagamentos/<%= pagamento.id %>?_method=DELETE" method="POST" style="display:inline;">
                    <button type="submit">Deletar</button>
                </form>
            </li>
        <% }); %>
    </ul>
</body>
</html>
